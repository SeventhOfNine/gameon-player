<server description="Settings for local development (overlays), skip/remove for built containers">

  <!-- Enable API discovery and restConnector -->
  <featureManager>
      <feature>apiDiscovery-1.0</feature>
  </featureManager>

  <!-- Swagger API Discovery is password protected / administrative interface -->
  <quickStartSecurity userPassword="adminPassword" userName="admin"/>

  <!-- Enable file polling -->
  <applicationMonitor updateTrigger="polled" pollingRate="30s"/>
  <config updateTrigger="polled" monitorInterval="30s" />

</server>
